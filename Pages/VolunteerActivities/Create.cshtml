@page
@model CoHO.Pages.VolunteerActivities.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>VolunteerActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.VolunteerId" class="control-label"></label>
                <select asp-for="VolunteerActivity.VolunteerId" class ="form-control" asp-items="ViewBag.VolunteerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.IniativeId" class="control-label"></label>
                <input asp-for="VolunteerActivity.IniativeId" class="form-control" />
                <span asp-validation-for="VolunteerActivity.IniativeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.StartTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.StartTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.EndTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.EndTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.ElapsedTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.ElapsedTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.ElapsedTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VolunteerActivity.ClockedIn" /> @Html.DisplayNameFor(model => model.VolunteerActivity.ClockedIn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
