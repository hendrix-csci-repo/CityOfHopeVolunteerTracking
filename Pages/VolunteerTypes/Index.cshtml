@page
@model CoHO.Pages.VolunteerTypes.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="padding">Index</h1>

<p class="padding">
    <a asp-page="Create">Create New</a>
</p>
<table class="table table-striped table-responsive padding">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerType[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VolunteerType[0].InActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.VolunteerType) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.VolunteerTypeID">Edit</a> 
             </td>
        </tr>
}
    </tbody>
</table>
