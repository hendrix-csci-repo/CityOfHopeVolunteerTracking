@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<div class="login-background nomargins nopadding splash">
    <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                            <div class="login-box span12 pagination-centered">
                                    <h2 class="text-center">Log in</h2>       
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="User ID" required="required">
                                    </div>
                                    <div class="form-group">
                                        @Html.Password("password", "", new {@class = "form-control", id = "password", Textmode = "Password", placeholder="Password", required = "required"})                                    </div>
                                    <div class="form-group">
                                        <button type="submit" href="adminIndex"class="btn btn-primary">Log in</button>
                                    </div>
                                <b><a href="adminindex">!!!TEMPORARY LINK TO ADMIN PAGE!!!</a></b>
                            </div>
                    </div>
                </div>
            </div>
         </div>



