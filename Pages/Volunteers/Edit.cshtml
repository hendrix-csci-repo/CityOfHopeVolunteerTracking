@page
@model CoHO.Pages.Volunteers.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="padding">Edit</h1>

<h4 class="padding">Volunteer</h4>
<hr />


<form method="get">
    <button type="submit" style="margin-left:30px; margin-bottom:20px"  asp-area="Identity"  asp-page="/Account/ResetPassword" asp-route-email="Volunteer.Email">Reset User's Password</button>
</form>
<br />

<div class="row padding">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Volunteer.VolunteerID" />
            <div class="form-group">
                <label asp-for="Volunteer.UserName" class="control-label"></label>
                <input asp-for="Volunteer.UserName" class="form-control" />
                <span asp-validation-for="Volunteer.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.First" class="control-label"></label>
                <input asp-for="Volunteer.First" class="form-control" />
                <span asp-validation-for="Volunteer.First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Last" class="control-label"></label>
                <input asp-for="Volunteer.Last" class="form-control" />
                <span asp-validation-for="Volunteer.Last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Birthday" class="control-label"></label>
                <input asp-for="Volunteer.Birthday" class="form-control" />
                <span asp-validation-for="Volunteer.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Email" class="control-label"></label>
                <input asp-for="Volunteer.Email" class="form-control" />
                <span asp-validation-for="Volunteer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Home" class="control-label"></label>
                <input asp-for="Volunteer.Home" class="form-control" />
                <span asp-validation-for="Volunteer.Home" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Cell" class="control-label"></label>
                <input asp-for="Volunteer.Cell" class="form-control" />
                <span asp-validation-for="Volunteer.Cell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.RaceID" class="control-label"></label>
                <select asp-for="Volunteer.RaceID" class="form-control" asp-items="ViewBag.RaceID"></select>
                <span asp-validation-for="Volunteer.RaceID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.VolunteerTypeID" class="control-label"></label>
                <select asp-for="Volunteer.VolunteerTypeID" class="form-control" asp-items="ViewBag.VolunteerTypeID"></select>
                <span asp-validation-for="Volunteer.VolunteerTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.EducationLevelID" class="control-label"></label>
                <select asp-for="Volunteer.EducationLevelID" class="form-control" asp-items="ViewBag.EducationLevelID"></select>
                <span asp-validation-for="Volunteer.EducationLevelID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.ClockedIn" /> @Html.DisplayNameFor(model => model.Volunteer.ClockedIn)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.InActive" /> @Html.DisplayNameFor(model => model.Volunteer.InActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.CommunityService" /> @Html.DisplayNameFor(model => model.Volunteer.CommunityService)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.WorkersComp" /> @Html.DisplayNameFor(model => model.Volunteer.WorkersComp)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.Veteran" /> @Html.DisplayNameFor(model => model.Volunteer.Veteran)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.Admin" /> @Html.DisplayNameFor(model => model.Volunteer.Admin)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
