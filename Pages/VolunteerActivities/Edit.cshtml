@page
@model CityOfHopeVolunteerTracking.Pages.VolunteerActivities.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>VolunteerActivity</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VolunteerActivity.ID" />
            <div class="form-group">
                <label asp-for="VolunteerActivity.Initiative" class="control-label"></label>
                <input asp-for="VolunteerActivity.Initiative" class="form-control" />
                <span asp-validation-for="VolunteerActivity.Initiative" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.UserName" class="control-label"></label>
                <input asp-for="VolunteerActivity.UserName" class="form-control" />
                <span asp-validation-for="VolunteerActivity.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.StartTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.StartTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.EndTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.EndTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VolunteerActivity.ElapsedTime" class="control-label"></label>
                <input asp-for="VolunteerActivity.ElapsedTime" class="form-control" />
                <span asp-validation-for="VolunteerActivity.ElapsedTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="VolunteerActivity.ClockedIn" /> @Html.DisplayNameFor(model => model.VolunteerActivity.ClockedIn)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
