@page
@model CoHO.Pages.Initiatives.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="padding">Index</h1>

<p class="padding">
    <a asp-page="Create">Create New</a>
</p>
<table class="table padding">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Initiative[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Initiative[0].InActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Initiative) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InActive)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.InitiativeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.InitiativeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.InitiativeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
