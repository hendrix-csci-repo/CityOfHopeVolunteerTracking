@page
@model CoHO.Pages.EducationLevels.EditModel

@{
    ViewData["Title"] = "Edit Education Level";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1 class="padding">Edit</h1>

<h4 class="padding">Education Level</h4>
<hr />
<div class="row padding">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EducationLevel.EducationLevelID" />
            <div class="form-group">
                <label asp-for="EducationLevel.Description" class="control-label"></label>
                <input asp-for="EducationLevel.Description" class="form-control" />
                <span asp-validation-for="EducationLevel.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="EducationLevel.InActive" /> @Html.DisplayNameFor(model => model.EducationLevel.InActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
