@page
@model CoHO.Pages.AdminIndexModel
@{
ViewData["Title"] = "Login";
Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}


<div class="login-background nopadding splash nomargins">
    <div class="container">
        <div class="row">
            <div class="col-sm-6">
                <div class="login-box pagination-lg">
                    <h2 class="text-center">Report Generator</h2>
                    <div class="form-group">
                        <div class="form-group">
                            <form asp-page-handler="range" method="post">
                                <input type="date" class="admin-input form-control" name="start" placeholder="Start Date" />
                                <input type="date" class="form-control admin-input" name="end" placeholder="End Date" />
                                <button class="btn btn-primary">Generate Report from Selected Date Range</button>
                            </form>
                        </div>
                        <div class="form-group">
                            <form asp-page-handler="volunteer" method="post">
                                <select asp-for="VolunteerActivity.VolunteerId" class="form-control"
                                        asp-items="ViewBag.VolunteerId"></select>
                                <button class="btn btn-primary">Generate Selected User's Report</button>
                            </form>
                        </div>
                        <div class="form-group">
                            <form asp-page-handler="view" method="post">
                                <button class="btn btn-primary">
                                    Generate Full Year Report
                                </button>
                            </form>
                        </div>
                     </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div class="login-box pagination-lg">
                    <h2 class="text-center">Manage Tables</h2>
                    <div class="form-group">
                        <form method="get">
                            <button type="submit" class="btn btn-primary" asp-page="/ValueOfHours/Index">Value of Hours</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <form method="get">
                            <button type="submit" class="btn btn-primary" asp-page="/Initiatives/Index">Initiatives</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <form method="get">
                            <button type="submit" class="btn btn-primary" asp-page="/VolunteerTypes/Index">Volunteer Types</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <form method="get">
                            <button type="submit" class="btn btn-primary" asp-page="/Races/Index">Races</button>
                        </form>
                    </div>
                    <div class="form-group">
                        <form method="get">
                            <button type="submit" class="btn btn-primary" asp-page="/EducationLevels/Index">Education Levels</button>
                        </form>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
