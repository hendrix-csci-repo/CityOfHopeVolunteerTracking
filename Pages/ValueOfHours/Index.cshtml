@model CityOfHopeVolunteerTracking.Pages.ValueOfHours.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ValueOfHour[0].EffectiveDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValueOfHour[0].Value)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ValueOfHour) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
