<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CityOfHopeVolunteerTracking</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <img class="navbar-brand logo" src="https://via.placeholder.com/100" alt="">
                      <ul class="nav navbar-nav navbar-right">
                        <li class="active">
                          <a class="nav-link" href="/">Clock in/Clock out<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="">
                          <a class="nav-link" href="/login">Login</a>
                        </li>
                      </ul>
                  </nav>
    </header>


    @RenderBody()


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - CityOfHopeVolunteerTracking - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
