@page
@model RegisterModel
@{
ViewData["Title"] = "Register";
Layout = "~/Pages/Shared/_AdminLayout.cshtml";
}

@Html.DisplayFor(model => model.Volunteer.Email)
@Html.DisplayFor(model => model.Volunteer.UserName)
    <head>
        <script src="~/lib/jquery/jquery.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    </head>

<h1 class="padding">Create new account</h1>

<div class="row padding">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <hr />
            <div class="form-group">
                <label asp-for="Volunteer.First" class="control-label"></label>
                <input asp-for="Volunteer.First" class="form-control" />
                <span asp-validation-for="Volunteer.First" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Last" class="control-label"></label>
                <input asp-for="Volunteer.Last" class="form-control" />
                <span asp-validation-for="Volunteer.Last" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Birthday" class="control-label"></label>
                <input asp-for="Volunteer.Birthday" class="form-control" />
                <span asp-validation-for="Volunteer.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Email" class="control-label"></label>
                <input asp-for="Volunteer.Email" class="form-control" />
                <span asp-validation-for="Volunteer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Home" class="control-label"></label>
                <input asp-for="Volunteer.Home" class="form-control" />
                <span asp-validation-for="Volunteer.Home" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.Cell" class="control-label"></label>
                <input asp-for="Volunteer.Cell" class="form-control" />
                <span asp-validation-for="Volunteer.Cell" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.RaceID" class="control-label"></label>
                <select asp-for="Volunteer.RaceID" class="form-control" asp-items="ViewBag.RaceID">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.VolunteerTypeID" class="control-label"></label>
                <select asp-for="Volunteer.VolunteerTypeID" class="form-control"
                    asp-items="ViewBag.VolunteerTypeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Volunteer.EducationLevelID" class="control-label"></label>
                <select asp-for="Volunteer.EducationLevelID" class="form-control" asp-items="ViewBag.EducationLevelID">
                    <option value=""></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.InActive" /> @Html.DisplayNameFor(model =>
                    model.Volunteer.InActive)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.CommunityService" /> @Html.DisplayNameFor(model
                    => model.Volunteer.CommunityService)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.WorkersComp" /> @Html.DisplayNameFor(model =>
                    model.Volunteer.WorkersComp)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.Veteran" /> @Html.DisplayNameFor(model =>
                    model.Volunteer.Veteran)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Volunteer.Admin" /> @Html.DisplayNameFor(model =>
                    model.Volunteer.Admin)
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}